<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="@color/teal_200"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="50dp">

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:gravity="center"
            android:textSize="35sp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/city_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50sp"
            android:ems="10"
            android:hint="@string/city_field_hint"
            android:inputType="textPersonName"
            android:textColor="@color/white"/>


        <Button
            android:id="@+id/main_btn"
            android:layout_width="160dp"
            android:layout_height="51dp"
            android:background="#845EC2"
            android:onClick="onClickGetCity"
            android:text="@string/main_button"
            app:backgroundTint="@color/teal_700"
             />

        <TextView
            android:id="@+id/temp_info"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:text="@string/default_T"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/description_info"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:gravity="center"
            android:text="@string/discription_view"
            android:textSize="40sp"
            android:maxLines="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>
</ScrollView>